		methods: {
			//	目的地和城市切换
			switchChange: function(item1, item2) {
				this.flag = !this.flag
				if(this.flag == false) {
					item1 = this.start
					item2 = this.end
					app.start = item2
					app.end = item1
				} else {
					item1 = this.end
					item2 = this.start
					app.start = item1
					app.end = item2
				}
			},
			//点击提交定制验证
			go_btn: function() {
				var reg = 11 && /^((13|14|15|17|18)[0-9]{1}\d{8})$/;
				//var url="/nptOfficialWebsite/apply/sendSms?mobile="+this.ruleForm.phone;
				if(app.name == '') {
					alert('请输入联系人');
					return
				};
				if(app.phone == '') {
					alert('手机号码不能为空');
					return
				} else if(!reg.test(app.phone)) {
					alert('请输入正确的手机号码');
					return
				};
				if(app.start == "" || app.start == "请输入目的地") {
					alert("请输入正确地址")
					return
				}
				if(app.end == "" || app.end == "请输入目的地") {
					alert("请输入正确地址")
					return
				}
				var data = {
					start: app.start,
					end: app.end,
					name: app.name,
					phone: app.phone,
					contents: app.contents
				}
				//发送定制后的内容接口
				Vue.http.options.emulateJSON = true;
				Vue.http.post(URLS + '/customization/store', data).then(function(response) {
