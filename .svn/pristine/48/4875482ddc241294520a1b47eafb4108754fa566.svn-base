<!doctype html>
<html>

	<head>
		<meta charset="UTF-8">
		<title>订单详情</title>
		<meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
		<link href="../css/mui.min.css" rel="stylesheet" />
		<link rel="stylesheet" type="text/css" href="../css/base.css" />
		<link rel="stylesheet" type="text/css" href="../css/index.css" />
	</head>

	<body>
		<!--标题-->
		<div id="app">
		<header class="mui-bar mui-bar-nav b_w" style="box-shadow: none;">
			<a class="mui-action-back mui-pull-left"><img class="img11" src="../imgs/left_jt.png" /></a>
			<h1 class="mui-title">订单详情</h1>
		</header>

		<div class="mui-content">
			
			<!--订单商品-->
			<div class="b_w mar_t_10 pad_l_15 pad_r_10 pad_t_10 pad_b_10 txt_c2">
				<div class="ts_16 mar_b_5 ts_w_800">交易完成</div>	
				<div class="ts_14 mar_t_10" style="display: flex;justify-content: space-between;">
					
					<div>总价:<span class="txt_c1 txt_c1_tatol">&nbsp;&nbsp;¥{{list.price}}</span></div>
<!--					<div><span class="margin_t_3 txt_16 c_txt1">剩余支付时间:&nbsp;&nbsp;<span class="margin_t_3 txt_16 c_txt1"><img class="img_time" src="../imgs/new_img_027.png" /><span class="c_txt5 c_txt5_new"></span></span></div>
-->
				</div>	
			</div>
			
			<!--产品信息-->
			<div class="b_w mar_t_10 txt_c2 ts_14 pad_t_15">
				<span class="ts_16 pad_l_15 ts_w_800">产品信息</span>
				<div class="br4 mar_t_10"></div>
				<div class="row h_115">
					<div class="col mar_l_13 mar_r_15">
						<div class="row widths">
							<span>{{list.title}}</span>
							<span ><img src="../imgs/new_img_01.png" style="width: 7px; height: 12px; padding-top: 2px;"></span>
						</div>						
						<div class="row widths" style="display: flex;justify-content: flex-start;align-items: center;">
							<span class="ts_13 txt_c3" style="width: 80px;"> 出行日期</span>
							<span class="ts_13" style="margin-left: 20px;">{{list.start_time}}</span>
						</div>
						<div class="row widths" style="display: flex;justify-content: flex-start;align-items: center;">
							<span class="ts_13 txt_c3" style="width: 80px;"> 单价</span>
							<span class="ts_13" style="margin-left: 20px;"><i style="font-style: normal;color: #ff8800;">¥{{list.p_price}}</i>&nbsp;x&nbsp;{{list.num}}份</span>
						</div>
						<!--<div class="row widths" style="display: flex;justify-content: flex-start;align-items: center;">
							<span class="ts_13 txt_c3" style="width: 80px;"> 儿童票</span>
							<span class="ts_13" style="margin-left: 20px;"><!--{{item.childs}}</span>
						</div>-->
						
					</div>
				</div>
			
			</div>
			
			<!--收货地址-->
			<div class="b_w mar_t_10 pad_b_10 txt_c2">
				<div class="ts_16 pad_13 ts_w_800">联系人信息</div>
				<div class="br4"></div>
				<div class="ts_14 pad_13 pad_13_new"><span class="mar_l_13">姓名</span><span class="mar_l_13">{{list.name}}</span></div>
				<div class="ts_14 pad_13  pad_13_new"><span class="mar_l_13">电话</span><span class="mar_l_13">{{list.phone}}</span></div>
				<div class="ts_14 pad_13  pad_13_new"><span class="mar_l_13">留言</span><span class="mar_l_13">{{list.contents}}</span></div>
			</div>
			
			
			
			<!--订单信息-->
			<div class="b_w mar_t_10 txt_c2 ts_14 pad_t_15 pad_b_10">
				<span class="ts_16 pad_l_15 ts_w_800">订单信息</span>
				<div class="br4 mar_t_10"></div>
				<div class="mar_l_13 mar_t_10">订单编号<span class="mar_l_30">{{list.order_id}}</span></div>
				<div class="mar_l_13 mar_t_5">创建时间<span class="mar_l_30">{{list.start_time}}</span></div>
			</div>
			
			<!--客服热线-->
			<div class="b_w mar_t_10 mar_b_60 h_44 row txt_c2">
				<span class="ts_16 pad_l_15 ts_w_800">客服热线</span>
				<span class="ts_14 txt_c3 pad_r_15">4008-027-027 ></span>
			</div>
			
			<div class="h_50 zxb_fixed b_w widths row6" style="bottom: 0;">
				<span class="but2 mar_r_10">删除订单</span>
				<span class="but2 mar_r_10">查看物流</span>
				<span class="but3 mar_r_10">立即支付</span>
			</div>
			
		</div>
	</div>	

	</body>

</html>
<script src="../js/mui.min.js"></script>
<script src="../js/vue.min.js" type="text/javascript" charset="utf-8"></script>
<script src="../js/vue_resource.js" type="text/javascript" charset="utf-8"></script>
<script src="../js/base_data.js" type="text/javascript" charset="utf-8"></script>
<script src="../js/showLoding.js" type="text/javascript" charset="utf-8"></script>
<script type="text/javascript">
	var app=new Vue({
		el:"#app",
		data:{
			list:[

			]
		},
		mounted:function(){
			var nowstr=window.sessionStorage?sessionStorage.getItem("order_xq_id"):Cookie.read("order_xq_id")
			
		Vue.http.get(order_xq+'?id='+nowstr).then(function(respones){
			//console.log(respones.body.data)
			app.list=respones.body.data
			console.log(app.list)
			console.log("成功")
		},function(err){
			mui.toast('网络不可用，请检查网络');
		})
			
		},
		methods:{
			
		}
	})
</script>