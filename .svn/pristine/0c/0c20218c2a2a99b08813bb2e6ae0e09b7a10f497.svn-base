														<i class="item_i2">出行日期{{item.start_time}}</i>
														<i class="item_i3">总价:<b>{{item.price}}</b></i>
													</span>
													</a>
												</p>
												<!--<p class="item_p3">-->
													<!--<a href="javascript:void(0)" class="zf_bth" @click="go_pay(item)">-->
														<!--{{item.status}}-->
													<!--</a>-->
												<!--</p>-->
